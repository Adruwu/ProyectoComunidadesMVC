@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>Login</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
	<link rel="stylesheet" href="path-to-your-custom-styles.css" />
</head>

<body class="text-center">

	<form asp-action="Login" method="post" class="form-signin">

		<h1 class="h3 mb-3 font-weight-normal">Login</h1>

		@Html.ValidationSummary(false, "", new { @class = "text-danger" })

		<div class="form-group">
			<label for="Username" class="sr-only">Username</label>
			<input type="text" class="form-control" id="Username" name="Username" placeholder="Username" required autofocus>
		</div>

		<div class="form-group">
			<label for="Password" class="sr-only">Password</label>
			<input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
		</div>

		<button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
		<p class="mt-3">
			Don't have an account? <a asp-controller="Users" asp-action="Register">Register here</a>.
		</p>
		<p class="mt-5 mb-3 text-muted">&copy; ProyectoComunidades 2023</p>

	</form>

</body>

</html>
