@model ProyectoComunidadesRelativo.Models.Community

@{
	ViewData["Title"] = "Create Community";
}

<div class="row">
	<div class="col-md-4">
		<h1>Create Community</h1>
		<div class="contenedor-registro">
			
			<div class="registration-card">
				<form asp-action="CreateCommunity">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="Tittle" class="control-label"></label>
						<input asp-for="Tittle" class="form-control" />
						<span asp-validation-for="Tittle" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Theme" class="control-label"></label>
						<input asp-for="Theme" class="form-control" />
						<span asp-validation-for="Theme" class="text-danger"></span>
					</div>

					<div class="form-group" style="margin-top: 25px">
						<input type="submit" value="Create" class="btn btn-primary" style="background-color: #69140e; border-color: #69140e;" />
					</div>

				</form>

			</div>
		</div>
	</div>
</div>

<div>
	<a asp-action="JoinCommunity">Back to List</a>
</div>
