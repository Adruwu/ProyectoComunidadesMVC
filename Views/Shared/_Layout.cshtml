<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ProyectoComunidadesRelativo</title>
</head>
<body>

	<header>
		<nav class="navbar navbar-expand-sm navbar-light">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProyectoComunidades</a>

				@if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
				{
					<p class="navbar-brand" style="text-align: right;">
						Welcome, @Context.Session.GetString("Username")
						<a class="logout-button" asp-area="" asp-controller="Home" asp-action="Index">
							Logout
						</a>
					</p>
				}

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer class="footer">

		<div class="col-lg-12">
			<p style="text-align: left; margin-left: 20px; margin-top: 10px;" class="small text-muted"> ProyectoComunidades | por: Adrián Mata Contreras</p>
		</div>

	</footer>


	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ProyectoComunidadesRelativo.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
		  integrity="sha512-KyZXEAg3QhqLMpG8r+Knujsl5+z0I5t9zwn1JLX6E5Hl95IpZjvh06BFU1PU29Mm22dk9Y2Hb5hdd6VsRDkmSQ=="
		  crossorigin="anonymous" referrerpolicy="no-referrer" />
	<script src="https://kit.fontawesome.com/1fb4da45b6.js" crossorigin="anonymous"></script>

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
